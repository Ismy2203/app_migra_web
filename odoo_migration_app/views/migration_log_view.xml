<odoo>
    <!-- Vista lista -->
    <record id="view_migration_log_list" model="ir.ui.view">
        <field name="name">migration.log.list</field>
        <field name="model">migration.log</field>
        <field name="arch" type="xml">
            <list string="Migraciones">
                <field name="migration_name"/>
                <field name="status"/>
                <field name="message"/>
                <field name="migration_date"/>
                <field name="model_name"/>
            </list>
        </field>
    </record>

    <record id="view_migration_log_form" model="ir.ui.view">
        <field name="name">migration.log.form</field>
        <field name="model">migration.log</field>
        <field name="arch" type="xml">
            <form string="Log de Migración">
                <sheet>
                    <div class="oe_title">
						<h1>
							<field name="migration_name" required="1" placeholder="Name..." force_save="1"/>
						</h1>
					</div>
                    <group>
                        <field name="status"/>
                        <field name="message"/>
                        <field name="migration_date"/>
                        <field name="model_name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_migration_log" model="ir.actions.act_window">
        <field name="name">Logs de Migración</field>
        <field name="res_model">migration.log</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
    </record>

    <menuitem id="migration_log_menu"
              name="Logs de Migración"
              parent="menu_migra_root"
              action="action_migration_log"/>
</odoo>

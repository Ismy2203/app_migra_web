<odoo>
    <!-- Vista lista para migration.test -->
    <record id="view_migration_test_list" model="ir.ui.view">
        <field name="name">migration.test.list</field>
        <field name="model">migration.test</field>
        <field name="arch" type="xml">
            <list string="Pruebas de Migración">
                <field name="name"/>
                <field name="status"/>
                <field name="test_date"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario para migration.test -->
    <record id="view_migration_test_form" model="ir.ui.view">
        <field name="name">migration.test.form</field>
        <field name="model">migration.test</field>
        <field name="arch" type="xml">
            <form string="Migración de Modelos">

                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" placeholder="Nombre de la Prueba..." force_save="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="status"/>
                            <field name="message"/>
                            <field name="test_date"/>
                        </group>
                    </group>                
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para mostrar la vista lista y formulario -->
    <record id="action_migration_test_new" model="ir.actions.act_window">
        <field name="name">Prueba de Migración</field>
        <field name="res_model">migration.test</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
    </record>

    <menuitem id="migration_test_menu" 
              name="Prueba de Migración" 
              parent="menu_migra_root"
              action="action_migration_test_new"/>
</odoo>
